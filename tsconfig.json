{
  "compilerOptions": {
    "sourceMap": true,
    "removeComments": true,
    "outDir": "./lib",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "esnext",
    "strictBindCallApply": true,
    "lib": [
      "es6",
      "dom",
      "es2016.array.include"
    ],
    "baseUrl": "./"
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules"
  ]
}